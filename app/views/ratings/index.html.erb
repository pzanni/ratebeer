<h2>Rating statistics</h2>

  <div class="row">
    
    <div class="col-md-3">
      <h4>Top beers</h4>
      <%= render 'list', items: @top_beers %>
    </div>
    <div class="col-md-3">
      <h4>preferred styles</h4>
      <%= render 'list', items: @top_styles %>
    </div>
  </div>

<h4>Most actuve user</h4>

<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>favorite beer</th>
      <th>favorite brewery</th>
      <th>preferred style</th>
    </tr>
  </thead>

<h2>List of ratings</h2>
<p> Number of ratings: <%= @ratings.count %> </p>

<ul>
  <% @ratings.each do |rating| %>
    <li> <%= rating %> <%= link_to rating.user.username, rating.user %> </li>
  <% end %>
</ul>

<%= link_to 'New Rating', new_rating_path, class:'btn btn-primary' %>